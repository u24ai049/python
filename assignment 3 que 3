def utopian_tree_height(N):
    height = 1  
    for i in range(1, N+1):
        if i % 2 != 0:  
            height *= 2
        else:  
            height += 1
    return height
    
N = int(input("Enter the number of growth cycles: "))
print(f"Height of the tree after {N} cycles: {utopian_tree_height(N)} meters")
